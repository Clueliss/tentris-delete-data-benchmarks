# Let IGUANA start and stop system services
# Required to be able to start and stop triplestores

iguana ALL=(root) NOPASSWD: /usr/bin/systemctl
iguana ALL=(tentris) NOPASSWD: /opt/tentris/tentris_terminal
iguana ALL=(rdf3x) NOPASSWD: /opt/rdf3x/rdf3xembedded
iguana ALL=(triplebit) NOPASSWD: /opt/triplebit/triplebitQuery
